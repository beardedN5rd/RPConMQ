exe TestClient
	:
		[ glob ./lib/cpp/example/TestClient.cpp ]
		rpconmq_client
		qpidclient
		qpidcommon
		qpidmessaging
		qpidtypes
	:
		<include>./lib/cpp/include
	;
		
exe TestServer
	:
		[ glob ./lib/cpp/example/TestServer.cpp ]
		rpconmq_server
		qpidclient
		qpidcommon
		qpidmessaging
		qpidtypes
	:
		<include>./lib/cpp/include
	;
